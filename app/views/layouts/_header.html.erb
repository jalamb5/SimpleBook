<header>

<div>
  <%= link_to 'SimpleBook', root_path, id: 'logo' %>
</div>

  <div class='accountnav'>
    <% if logged_in? %>
      <%= "Hello #{current_user.fname}" %>

      <% unless current_page? user_path(current_user) %>
        <%= button_to 'Profile', user_path(current_user), method: :get %>
      <% else %>
        <%= button_to 'Edit Profile', edit_user_registration_path, method: :get %>
      <% end %>

      <%= button_to 'Logout', destroy_user_session_path, method: :get %>

    <% else %>
      <%= button_to 'Login', new_user_session_path, method: :get %>

      <%= button_to 'Sign Up', new_user_registration_path, method: :get %>
    <% end %>
  </div>
</header>
