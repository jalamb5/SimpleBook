<div id="<%= dom_id user %>">
  <%= "Name:  #{user.fname} #{user.lname}" %><br>
  <%= "Email: #{user.email}" %><br>
  <%= "Following: #{@user.following.count}"%>
  <%= "Followers: #{@user.followers.count}"%>

  <div>
    Posts:
    <% user.posts.each do |post| %>
      <%= render post %>
    <% end %>
  </div>

</div>
